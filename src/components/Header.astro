<!DOCTYPE html>
<html>
<head>
    <style>
        .header {
            text-align: center;
            padding: 1px;
            background: url(https://spar2099.sirv.com/la_seleccion/image1.png) no-repeat center center;
            background-size: cover;
            color: #ffffff;
            font-size: 26px;
            text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black;
            margin-bottom: 100px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .header img {
            width: 64px; /* Ajusta el tamaño de la imagen */
            height: auto;
            margin-left: 10px; /* Ajusta este valor según tus necesidades */
            float: left;
        }
        .header-image {
            width: 20%;
            height: auto;
            display: block;
        }
        .hidden-content {
            display: none; /* Esconde el contenido inicialmente */
        }
        .show-on-scroll {
            display: block; /* Muestra el contenido al hacer scroll */
        }
    </style>
</head>
<body>

    <div class="bg-gray-100">
        <!-- Navbar/Header -->
        <nav class="header fixed w-full z-20 top-0">
            <div class="container mx-auto flex justify-end items-center">
                
                <a href="index.html" class="font-bold">
                    <img src="https://spar2099.sirv.com/la_seleccion/LOGO_SELECCION.png" alt="Logo" class="header-image"/>
                </a>
                
            </div>
        </nav>
        <!-- Sidebar (Initially hidden) -->
        <div id="sidebar" class="fixed inset-y-0 left-0 bg-blue-600 w-64 transform -translate-x-full transition-transform duration-300 ease-in-out z-30 p-4 md:hidden">
            <div class="flex justify-between items-center text-white">
                <div class="text-xl font-bold">Menu</div>
                <button id="menu-close" class="focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <!-- <nav class="mt-4 space-y-4">
                <a href="#" class="block text-white hover:bg-blue-500 px-3 py-2 rounded-md">Inicio</a>
            </nav> -->
        </div>
        <!-- JavaScript para el Toggle del Sidebar y Scroll -->
        <script>
            const menuToggle = document.getElementById('menu-toggle');
            const menuClose = document.getElementById('menu-close');
            const sidebar = document.getElementById('sidebar');
            const header = document.querySelector('.header');

            menuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });

            menuClose.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });

            // Cerrar sidebar si se hace clic fuera
            window.addEventListener('click', (e) => {
                if (e.target instanceof Node) {
                    if (!sidebar.contains(e.target) && !menuToggle.contains(e.target) && sidebar.classList.contains('translate-x-0')) {
                        sidebar.classList.add('-translate-x-full');
                    }
                }
            });

            // Ocultar contenido al hacer scroll hacia abajo
            window.addEventListener('scroll', () => {
                if (window.scrollY > 100) { // Ajusta el valor según tus necesidades
                    header.classList.add('hidden-content');
                } else {
                    header.classList.remove('hidden-content');
                }
            });
        </script>
    </div>

</body>
</html>
