<style>
  .header {
    text-align: center;
    padding: 15px;
    background: url(img/image1.png) no-repeat center center;
    background-size: cover;
    color: #ffffff;
    font-size: 26px;
    text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black; 
    margin-bottom: 100px; 
  }
</style>

<div class="bg-gray-100">

  <!-- Navbar/Header -->
  <nav class="header fixed w-full z-20 top-0">
    <div class="container mx-auto flex justify-between items-center">
      <div class="font-bold">La Selecci√≥n</div>
      <div class="hidden md:flex space-x-4">
        <a href="#" class="hover:bg-blue-500 px-3 py-2 rounded-md">Inicio</a>
      </div>
      <button id="menu-toggle" class="md:hidden focus:outline-none">
        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Sidebar (Initially hidden) -->
  <div id="sidebar"
    class="fixed inset-y-0 left-0 bg-blue-600 w-64 transform -translate-x-full transition-transform duration-300 ease-in-out z-30 p-4 md:hidden">
    <div class="flex justify-between items-center text-white">
      <div class="text-xl font-bold">Menu</div>
      <button id="menu-close" class="focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <nav class="mt-4 space-y-4">
      <a href="#" class="block text-white hover:bg-blue-500 px-3 py-2 rounded-md">Inicio</a>

    </nav>
  </div>


  <!-- JavaScript para el Toggle del Sidebar -->
  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const menuClose = document.getElementById('menu-close');
    const sidebar = document.getElementById('sidebar');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });

    menuClose.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });

    // Cerrar sidebar si se hace clic fuera
    window.addEventListener('click', (e) => {
      if (e.target instanceof Node) {
        if (!sidebar.contains(e.target) && !menuToggle.contains(e.target) && sidebar.classList.contains('translate-x-0')) {
          sidebar.classList.add('-translate-x-full');
        }
      }
    });
  </script>