<style>
  body {
    margin: 0;
      font-family: Arial, sans-serif;
      background-color: #000;
      color: #fff;
      cursor: url('https://spar2099.sirv.com/la_seleccion/guayo2.png') 16 16, auto;
  }
  a { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), pointer; /* Cambia el cursor sobre enlaces */ } 
  button { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), pointer; /* Cambia el cursor sobre botones */ } 
  .custom-cursor { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), auto; /* Cambia el cursor en elementos específicos */ } /* Mantener el cursor al hacer clic */ 
  a:active,
   button:active, 
   .custom-cursor:active { 
    cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), auto; /* Mantener el cursor al hacer clic */ }


  main {
    margin-top: 80px;
    padding: 20px;
  }

  .imagenes-reserva {
  display: flex;
  width: 1000px;
  height: 430px;
  position: auto;
  top: 50%;
  left: 150px;
  transform: translate(400px, 10px);
}

.imagen-container {
  position: relative;
  flex-grow: 1;
}

.imagen-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.8;
  transition: 0.5s ease;
}

.texto-imagen {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0px;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  text-align: center;
  font-size: 0.7em;
}

  section {
  display: flex;
  width: 1000px;
  height: 430px;
  position: auto;
  top: 50%;
  left: 150px;
  transform: translate(400px, 10px);
}

  section img {
    width: 0px;
    flex-grow: 1;
    object-fit: cover;
    opacity: .8;
    transition: .5s ease;
  }

  section img:hover{
    cursor: crosshair;
    width: 300px;
    opacity: 1;
    filter: contrast(120%);
  }

  .fondo-desaturado h1 {
  font-size: 2.5em; /* Ajusta el tamaño según prefieras */
  font-weight: bold;
  color: #FFff; /* Cambia el color según tus necesidades */
}



  .contenedor {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .player-selection {
    background-color: #004488;
    color: white;
    padding: 10px;
    margin: 10px auto;
    width: 80%;
    text-align: center;
    border-radius: 8px;
    font-size: 20px;
    font-weight: bold;
    text-shadow: 
      -1px -1px 0 black,  
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  .cancha {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('img/image.cancha.png') no-repeat center center;
    background-size: cover;
    width: 100%;
    height: 600px;
    margin: 20px auto;
    position: relative;
    border: 5px solid #004488;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .lineas-cancha {
    position: absolute;
    width: 100%;
    height: 100%;
    background: url("img/image.cancha.png") no-repeat center center;
    background-size: contain;
    opacity: 0.7;
  }

  .jugador {
    position: absolute;
    text-align: center;
    cursor: pointer;
    width: 130px;
    height: 130px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .jugador a {
    display: inline-block;
    color: white;
    text-decoration: none;
    font-weight: bold;
    font-size: 14px;
    padding: 5px 10px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 5px;
    transition: all 0.3s ease;
    filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.8));
  }

  

  .jugador a:hover {
    transform: scale(1.1);
    background-color: rgba(0, 68, 136, 0.9);
  }

  .jugador img {
    display: none;
    position: absolute;
    top: -130px;
    left: 50%;
    transform: translateX(-50%);
    width: 130px;
    height: 130px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    transition: transform 0.3s ease;
    z-index: 10;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .jugador:hover img {
    display: block;
    transform: translateX(-50%) scale(1.2);
  }

  /* Posiciones de los jugadores */
  .portero { bottom: 5%; left: 50%; transform: translateX(-50%); }
  .defensa:nth-of-type(6) { bottom: 25%; left: 17%; }
  .defensa:nth-of-type(3) { bottom: 20%; left: 33%; }
  .defensa:nth-of-type(4) { bottom: 20%; left: 58%; }
  .defensa:nth-of-type(5) { bottom: 25%; left: 75%; }
  .medio-defensivo:nth-of-type(8) { bottom: 45%; left: 30%; }
  .medio-defensivo:nth-of-type(7) { bottom: 45%; left: 60%; }
  .medio-ofensivo:nth-of-type(11) { bottom: 60%; left: 20%; }
  .medio-ofensivo:nth-of-type(9) { bottom: 50%; left: 45%; }
  .medio-ofensivo:nth-of-type(11) { bottom: 55%; left: 20%; }
  .medio-ofensivo:nth-of-type(10) { bottom: 55%; left: 70%; }
  .delantero { bottom: 70%; left: 45%; }

  .seccion-porteros {
    margin: 20px 0;
    padding: 20px;
    background-color: rgba(0, 68, 136, 0.8);
    border-radius: 8px;
  }

  .seccion-porteros h2 {
    color: #FFf;
    text-align: center;
    margin-bottom: 20px;
  }

  .porteros-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .card-portero {
    width: 200px;
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .card-portero:hover {
    transform: translateY(-5px);
  }

  .card-portero img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .info-portero {
    padding: 15px;
    background-color: #004488;
    color: white;
  }

  .info-portero h3 {
    margin: 0 0 10px 0;
    font-size: 18px;
  }

  .estado {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .titular {
    color: #FFD700;
  }

  .suplente {
    color: #FF4136;
  }

  .btn {
    background-color: #FFD700;
    color: #004488;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #FFA500;
  }

  .fondo-desaturado {
    background: rgba(0, 0, 0, 0.7);
    padding: 20px;
    margin-top: 20px;
    border-radius: 8px;
    text-align: center;
  }

  .fondo-desaturado p {
    font-size: 24px;
    color: #FFf;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .cancha {
      height: 400px;
    }

    .jugador {
      width: 80px;
      height: 80px;
    }

    .jugador a {
      font-size: 12px;
    }

    .jugador .numero {
      font-size: 10px;
    }

    .jugador img {
      width: 80px;
      height: 80px;
      top: -80px;
    }
  }
</style>
