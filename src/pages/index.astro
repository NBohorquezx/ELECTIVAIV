---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";

const jugadores = [
  { nombre: 'C.VARGAS', numero: 1, posicion: 'portero', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/camilo_vargas.png', titular: true},
  { nombre: 'C.CUESTA', numero: 2, posicion: 'defensa', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/camilo_cuesta.png', titular: true},
  { nombre: 'D.SÁNCHEZ', numero: 23, posicion: 'defensa', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/d.sanchez.png', titular: true},
  { nombre: 'D.MUÑOZ', numero: 4, posicion: 'defensa', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/d_mu%C3%B1oz.png', titular: true},
  { nombre: 'J.MOJICA', numero: 17, posicion: 'defensa', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/j_mojica.png', titular: true},
  { nombre: 'R.RIOS', numero: 6, posicion: 'medio-defensivo', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/r_rios.png', titular: true},
  { nombre: 'J.LERMA', numero: 16, posicion: 'medio-defensivo', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/j.lerma.jpg', titular: true},
  { nombre: 'J.RODRÍGUEZ', numero: 10, posicion: 'medio-ofensivo', imagen: "https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/j_rodriguez.png", titular: true},
  { nombre: 'J.ARIAS', numero: 11, posicion: 'medio-ofensivo', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/j.arias.png', titular: true},
  { nombre: 'L.DÍAZ', numero: 7, posicion: 'medio-ofensivo', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/l_diaz.png', titular: true},
  { nombre: 'J.CÓRDOBA', numero: 24, posicion: 'delantero', imagen: 'https://nuvvv-0115.sirv.com/Shared/la_seleccion-from-spar2099/j_cordoba.png', titular: true},
];
---

<Layout title="Alineación del Equipo">
  <main class="relative overflow-hidden" data-view-transition="hero">
    <!-- <Header /> -->
    <div class="contenedor">  
      <div class="player-selection">
        Selecciona un jugador
      </div>
      <div class="cancha">
        <div class="lineas-cancha"></div>
        {jugadores.map((jugador) => (
          <div class={`jugador ${jugador.posicion}`}>
            <a 
              href={`/${jugador.nombre.toLowerCase().replace(/\./g, '')}`} 
              style={{ color: 'white', textDecoration: 'none' }} 
              data-view-transition="hero"
            >
              {jugador.nombre}
            </a>
            <img src={jugador.imagen} alt={jugador.nombre} />
          </div>
        ))}
      </div>
    </div>

    <div class="contenedor">  
      <div class="seccion-porteros">
        <h2>Porteros</h2>
        <div class="porteros-container">
          {jugadores.filter(jugador => jugador.posicion === 'portero').map((jugador) => (
            <div class="card-portero">
              <img src={jugador.imagen} alt={jugador.nombre} />
              <div class="info-portero">
                <h3>{jugador.nombre}</h3>
                <p class={`estado ${jugador.titular ? 'titular' : 'suplente'}`}>
                  {jugador.titular ? 'Titular' : 'Suplente'}
                </p>
                <button class="btn">Ver detalles</button>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="fondo-desaturado">
        <p>Selección Colombia - Alineación Titular</p>
      </div>
    </div>
  </main>
</Layout> 

<style>
  body {
    margin: 0;
      font-family: Arial, sans-serif;
      background-color: #000;
      color: #fff;
      cursor: url('https://spar2099.sirv.com/la_seleccion/guayo2.png') 16 16, auto;
  }
  a { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), pointer; /* Cambia el cursor sobre enlaces */ } 
  button { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), pointer; /* Cambia el cursor sobre botones */ } 
  .custom-cursor { cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), auto; /* Cambia el cursor en elementos específicos */ } /* Mantener el cursor al hacer clic */ 
  a:active,
   button:active, 
   .custom-cursor:active { 
    cursor: url('https://spar2099.sirv.com/la_seleccion/guayo3.png'), auto; /* Mantener el cursor al hacer clic */ }

  /* .header {
    text-align: center; */
    /* padding: 15px;
    background: url(img/image1.png) no-repeat center center;
    background-size: cover;
    color: #FFD700;
    font-size: 26px;
    text-shadow: 
      -1px -1px 0 black,  
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 20;
  } */

  main {
    margin-top: 80px;
    padding: 20px;
  }

  .contenedor {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .player-selection {
    background-color: #004488;
    color: white;
    padding: 10px;
    margin: 10px auto;
    width: 80%;
    text-align: center;
    border-radius: 8px;
    font-size: 20px;
    font-weight: bold;
    text-shadow: 
      -1px -1px 0 black,  
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  .cancha {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('img/image.cancha.png') no-repeat center center;
    background-size: cover;
    width: 100%;
    height: 600px;
    margin: 20px auto;
    position: relative;
    border: 5px solid #004488;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .lineas-cancha {
    position: absolute;
    width: 100%;
    height: 100%;
    background: url("img/image.cancha.png") no-repeat center center;
    background-size: contain;
    opacity: 0.7;
  }

  .jugador {
    position: absolute;
    text-align: center;
    cursor: pointer;
    width: 130px;
    height: 130px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .jugador a {
    display: inline-block;
    color: white;
    text-decoration: none;
    font-weight: bold;
    font-size: 14px;
    padding: 5px 10px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 5px;
    transition: all 0.3s ease;
    filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.8));
  }

  

  .jugador a:hover {
    transform: scale(1.1);
    background-color: rgba(0, 68, 136, 0.9);
  }

  .jugador img {
    display: none;
    position: absolute;
    top: -130px;
    left: 50%;
    transform: translateX(-50%);
    width: 130px;
    height: 130px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    transition: transform 0.3s ease;
    z-index: 10;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .jugador:hover img {
    display: block;
    transform: translateX(-50%) scale(1.2);
  }

  /* Posiciones de los jugadores */
  .portero { bottom: 5%; left: 50%; transform: translateX(-50%); }
  .defensa:nth-of-type(6) { bottom: 25%; left: 17%; }
  .defensa:nth-of-type(3) { bottom: 20%; left: 33%; }
  .defensa:nth-of-type(4) { bottom: 20%; left: 58%; }
  .defensa:nth-of-type(5) { bottom: 25%; left: 75%; }
  .medio-defensivo:nth-of-type(8) { bottom: 45%; left: 30%; }
  .medio-defensivo:nth-of-type(7) { bottom: 45%; left: 60%; }
  .medio-ofensivo:nth-of-type(11) { bottom: 60%; left: 20%; }
  .medio-ofensivo:nth-of-type(9) { bottom: 50%; left: 45%; }
  .medio-ofensivo:nth-of-type(11) { bottom: 55%; left: 20%; }
  .medio-ofensivo:nth-of-type(10) { bottom: 55%; left: 70%; }
  .delantero { bottom: 70%; left: 45%; }

  .seccion-porteros {
    margin: 20px 0;
    padding: 20px;
    background-color: rgba(0, 68, 136, 0.8);
    border-radius: 8px;
  }

  .seccion-porteros h2 {
    color: #FFD700;
    text-align: center;
    margin-bottom: 20px;
  }

  .porteros-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .card-portero {
    width: 200px;
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .card-portero:hover {
    transform: translateY(-5px);
  }

  .card-portero img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .info-portero {
    padding: 15px;
    background-color: #004488;
    color: white;
  }

  .info-portero h3 {
    margin: 0 0 10px 0;
    font-size: 18px;
  }

  .estado {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .titular {
    color: #FFD700;
  }

  .suplente {
    color: #FF4136;
  }

  .btn {
    background-color: #FFD700;
    color: #004488;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #FFA500;
  }

  .fondo-desaturado {
    background: rgba(0, 0, 0, 0.7);
    padding: 20px;
    margin-top: 20px;
    border-radius: 8px;
    text-align: center;
  }

  .fondo-desaturado p {
    font-size: 24px;
    color: #FFD700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .cancha {
      height: 400px;
    }

    .jugador {
      width: 80px;
      height: 80px;
    }

    .jugador a {
      font-size: 12px;
    }

    .jugador .numero {
      font-size: 10px;
    }

    .jugador img {
      width: 80px;
      height: 80px;
      top: -80px;
    }
  }
</style>
